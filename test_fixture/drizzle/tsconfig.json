{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2022",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFile": true,
    "moduleResolution": "node"
  },
  "include": [
    "src"
  ]
}
